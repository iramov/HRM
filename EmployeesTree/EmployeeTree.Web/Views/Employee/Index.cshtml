@model IEnumerable<EmployeeTree.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default"})
</p>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>@Html.ActionLink("First name", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "FirstName" })</th>
        <th>@Html.ActionLink("Last name", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "LastName" })</th>
        <th>@Html.ActionLink("Postion", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Position" })</th>
        <th>@Html.ActionLink("Delivery", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Delivery" })</th>
        <th>@Html.ActionLink("Email", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Email" })</th>
        @*<th>@Html.ActionLink("Manager", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Manager" })</th>
            <th>@Html.ActionLink("Team", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Team" })</th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Manager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("Edit", "Employee", new { id = item.Id })">
                        Edit
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="@Url.Action("EmployeeTeamPreview", "Employee", new { id = item.Id })">
                        Team preview
                    </a>
                    <a class="btn btn-default" href="@Url.Action("Details", "Employee", new { id = item.Id })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="@Url.Action("Delete", "Employee", new { id = item.Id })">
                        Delete
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
