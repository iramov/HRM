@model IEnumerable<EmployeeTree.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Projects manager</h2>

<p>
    @Html.ActionLink("Create New Project", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>@Html.ActionLink("Name", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Name" })</th>
        <th>@Html.ActionLink("Delivery", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Delivery" })</th>
        <th>
            @Html.DisplayNameFor(model => model.Teams)
        </th>
        <th></th>
    </tr>

    @foreach (var project in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => project.Delivery)
            </td>
            <td>
                <ul>
                    @foreach (var team in project.Teams)
                    {
                        <li>@team.Name</li>
                    }
                </ul>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("Edit", "Project", new { id = project.Id })">
                        Edit
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="@Url.Action("Details", "Project", new { id = project.Id })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="@Url.Action("Delete", "Project", new { id = project.Id })">
                        Delete
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
