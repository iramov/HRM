@model IEnumerable<EmployeeTree.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Project", "Create", null, new { @class = "btn btn-default"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teams)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Delivery)
        </td>
        <td>
            <ul>
                @foreach (var team in item.Teams)
                {
                    <li>@team.Name</li>
                }
            </ul>
        </td>
        <td>
            <div class="btn-group" role="group">
                <a class="btn btn-default" href="@Url.Action("Edit", "Project", new { id = item.Id })">
                    Edit
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default" href="@Url.Action("Details", "Project", new { id = item.Id })">
                    Details
                    <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default" href="@Url.Action("Delete", "Project", new { id = item.Id })">
                    Delete
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </div>
        </td>
    </tr>
}

</table>
