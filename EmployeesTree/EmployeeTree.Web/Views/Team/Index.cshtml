@model IEnumerable<EmployeeTree.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Teams manager</h2>

<p>
    @Html.ActionLink("Create new team", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>@Html.ActionLink("Name", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Name" })</th>
        <th>@Html.ActionLink("Delivery", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Delivery" })</th>
        <th>@Html.ActionLink("Leader", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Leader" })</th>
        <th>@Html.ActionLink("Project", "Index", new { isAscending = !ViewBag.IsAscending, orderByColumn = "Project" })</th>
       <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
           @* <th>
        @Html.DisplayNameFor(model => model.Delivery)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Leader)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Project.Name)
    </th>*@
        <th>
            Actions
        </th>
    </tr>

    @foreach (var team in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelteam => team.Name)
            </td>
            <td>
                @Html.DisplayFor(modelteam => team.Delivery)
            </td>
            <td>
                @Html.DisplayFor(modelteam => team.Leader.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelteam => team.Project.Name)
            </td>
            <td>
                <ul>
                    @foreach (var member in team.Members)
                    {
                        <li>@member.FullNameAndEmail</li>
                    }
                </ul>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("Edit", "Team", new { id = team.Id })">
                        Edit
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="@Url.Action("Details", "Team", new { id = team.Id })">
                        Details
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="@Url.Action("Delete", "Team", new { id = team.Id })">
                        Delete
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>

<div>
    <button type="button" class="btn btn-default" name="Back" onclick="location.href='@Url.Action("Index", "Home")'">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Back
    </button>
</div>